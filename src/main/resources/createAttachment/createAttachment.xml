<template name="createAttachment" onError="fault" xmlns="http://ws.apache.org/ns/synapse">
    <!-- Header Elements Start-->
    <parameter name="timeZoneDefinition"/>
    <parameter name="periods"/>
    <parameter name="transitionsGroups"/>
    <parameter name="transitions"/>
    <parameter name="requestServerVersion"/>
    <parameter name="mailboxCulture"/>
    <parameter name="principalName"/>
    <parameter name="sid"/>
    <parameter name="primarySmtpAddress"/>
    <parameter name="smtpAddress"/>
    <!-- Header Elements END-->
    <!--Start of Body-->
    <parameter name="parentItemId"/>
    <parameter name="attachments"/>

    <!--End of Body-->
    <sequence>
        <class name="org.wso2.carbon.connector.CreateAttachmentMediator"/>
        <header name="To" expression="$ctx:uri.var.ews.apiUrl"/>
        <header name="Action" value="http://schemas.microsoft.com/exchange/services/2006/messages/CreateAttachment"/>
        <property name="messageType" scope="axis2" value="text/xml"/>
        <property name="DISABLE_CHUNKING" value="true" scope="axis2"/>
        <property name="FORCE_ERROR_ON_SOAP_FAULT" value="true"/>
        <call>
            <endpoint>
                <default format="soap11"/>
            </endpoint>
        </call>
    </sequence>
</template>
